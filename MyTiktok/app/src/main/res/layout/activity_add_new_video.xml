<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    android:padding="10dp"
    tools:context=".AddNewVideo">
    <EditText
        android:id="@+id/titleVideo"
        android:textColor="#333333"
        android:textStyle="bold"
        android:hint="Enter Title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"/>
    <VideoView
        android:id="@+id/VideoNew"
        android:layout_marginTop="10dp"
        android:layout_below="@id/titleVideo"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <Button
        android:id="@+id/uploadvideo"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:hint="Upload Video"
        android:padding="10dp"
        android:layout_below="@id/VideoNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/libvideo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_action_videolib"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>